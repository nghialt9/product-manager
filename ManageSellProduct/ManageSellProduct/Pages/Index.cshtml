@page
@using ManageSellProduct.Business
@using ManageSellProduct.Enum;
@using ManageSellProduct.Helpers;
@using ManageSellProduct.Models;
@{
    ViewData[CommonEnum.Title] = "Product page";
    Product[] products = ProductBusiness.GetProducts();

    if (Request.Method == CommonEnum.Post)
    {
        string key = Request.Form[CommonEnum.Key];
        if(string.IsNullOrWhiteSpace(key) == false)
        {
            key = key.ToLower();
            Product[] existProducts = products;
            products = new Product[0];

            for (int i = 0; i < existProducts.Length; i++)
            {
                if (existProducts[i].Code.ToLower().Contains(key) ||
                    existProducts[i].Name.ToLower().Contains(key) ||
                    existProducts[i].Manufacturer.ToLower().Contains(key))
                {
                    products = CommonFunction.ArrayAddItem(products, existProducts[i]);
                }
            }
        }
    }
}

<div class="text-center">
    <div class="form-container">
        <form method="post">
            <div class="form-group">
                <label>Từ Khóa</label>
                <input type="text" name="Key" value="">
            </div>
            <div class="form-group">
                <input type="submit" value="Tìm">
                <a href="IndexDetail" class="link-add">Thêm</a>
            </div>
        </form>
    </div>
    @if (products.Length > 0)
    {
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Mã SP</th>
                    <th>Tên SP</th>
                    <th>Số Ngày Dùng</th>
                    <th>Ngảy Hết Hạn</th>
                    <th>Cty Sản Xuất</th>
                    <th>Ngày Sản Xuất</th>
                    <th>Loại</th>
                    <th>Giá</th>
                    <th>Số Lượng</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (Product product in products)
                {
                    <tr>
                        <td>@product.Code</td>
                        <td>@product.Name</td>
                        <td>@product.NumberDaysUse</td>
                        <td>@CommonFunction.DateToString(product.ExpiryDate, CommonEnum.DateDisplay)</td>
                        <td>@product.Manufacturer</td>
                        <td>@CommonFunction.DateToString(product.ManufactureDate, CommonEnum.DateDisplay)</td>
                        <td>@product.CategoryName</td>
                        <td>@CommonFunction.FormatAsVietnameseCurrency(product.Price)</td>
                        <td>@CommonFunction.FormatNumber(product.Quantity)</td>
                        <td>
                            <a href="IndexDetail?code=@product.Code&action=edit">Sửa</a>
                            <a href="IndexDetail?code=@product.Code&action=delete">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
