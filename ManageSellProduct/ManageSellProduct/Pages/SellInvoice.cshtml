@page
@using ManageSellProduct.Business
@using ManageSellProduct.Enum;
@using ManageSellProduct.Helpers;
@using ManageSellProduct.Models;
@{
    ViewData[CommonEnum.Title] = "SellInvoice page";
    SellInvoice[] sellInvoices = SellInvoiceBusiness.GetSellInvoices();

    if (Request.Method == CommonEnum.Post)
    {
        string key = Request.Form[CommonEnum.Key];
        if(string.IsNullOrWhiteSpace(key) == false)
        {
            key = key.ToLower();
            SellInvoice[] existSellInvoices = sellInvoices;
            sellInvoices = new SellInvoice[0];

            for (int i = 0; i < existSellInvoices.Length; i++)
            {
                if (existSellInvoices[i].Code.ToLower().Contains(key) ||
                    existSellInvoices[i].CustomerName.ToLower().Contains(key) ||
                    existSellInvoices[i].Address.ToLower().Contains(key) ||
                    CommonFunction.DateToString(existSellInvoices[i].InvoiceDate, CommonEnum.DateDisplay).Contains(key) ||
                    existSellInvoices[i].TotalPrice.ToString().Contains(key))
                {
                    sellInvoices = CommonFunction.ArrayAddItem(sellInvoices, existSellInvoices[i]);
                }
            }
        }
    }
}

<div class="text-center">
    <div class="form-container">
        <form method="post">
            <div class="form-group">
                <label>Từ Khóa</label>
                <input type="text" name="Key" value="">
            </div>
            <div class="form-group">
                <input type="submit" value="Tìm">
                <a href="SellInvoiceDetail" class="link-add">Thêm</a>
            </div>
        </form>
    </div>

    @if (sellInvoices.Length > 0)
    {
        <table class="styled-table">
            <thead>
                <tr>
                    <th>Mã Hóa Đơn Bán</th>
                    <th>Tên Khách Hàng</th>
                    <th>Địa Chỉ Khách Hàng</th>
                    <th>Ngày Tạo</th>
                    <th>Tổng Tiền</th>
                    <th>Thao Tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (SellInvoice sellInvoice in sellInvoices)
                {
                    <tr>
                        <td>@sellInvoice.Code</td>
                        <td>@sellInvoice.CustomerName</td>
                        <td>@sellInvoice.Address</td>
                        <td>@CommonFunction.DateToString(sellInvoice.InvoiceDate, CommonEnum.DateDisplay)</td>
                        <td>@CommonFunction.FormatAsVietnameseCurrency(sellInvoice.TotalPrice)</td>
                        <td>
                            <a href="SellInvoiceDetail?code=@sellInvoice.Code&action=edit">Sửa</a>
                            <a href="SellInvoiceDetail?code=@sellInvoice.Code&action=delete">Xóa</a>
                            <a href="SellInvoiceDetail?code=@sellInvoice.Code&action=detail">Chi Tiết</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
